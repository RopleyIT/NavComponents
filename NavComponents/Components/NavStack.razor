<div class="@NavStackClass">
    <CascadingValue Name="Collapsed" Value="@this.Collapsed">
        @ChildContent
    </CascadingValue>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool Collapsed { get; set; } = false;

    private string NavStackClass =>
        "ns-nav" + (Collapsed ? " collapsed" : string.Empty);
}
